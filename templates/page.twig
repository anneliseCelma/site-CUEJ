{% extends 'base.twig' %}

{% block main %}
    <main class="container-content"> 
        <a href="index.php?page=page&action=read">Toutes les pages</a>
        <a href="index.php?page=page&action=new">Créer une pages</a>
        {% for a in articles %}
            <p>{{a.nom}}</p>
            <p>{{a.resume}}</p>
            <a href="index.php?page=article&action=read&id={{a.id}}">👁️</a>
            <a href="index.php?page=article&action=edit&id={{a.id}}">🖋️</a>
            <a href="index.php?page=article&action=delete&id={{a.id}}">X</a>
        {% endfor %}
    </main>
{% endblock main %}